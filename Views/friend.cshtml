@Html.Partial("header.cshtml")
<h1>You created a contact!</h1>
<div class="row">
  <div class="col-xs-2 col-sm-3 col-md-3 col-lg-3 side-bar">

  </div>
  <div class="col-xs-8 col-sm-6 col-md-6 col-lg-6 friends-list">
    <h1>Your friend @Model.GetName()</h1>
    <ul>
    <li>Lives at: @Model.GetAddress()</li>
    <li>and you remember them by: @Model.GetDescription()</li>
    <li>and can be reached at: @Model.GetPhone()</li>
    <li>or by email here: <a href="mailto:@Model.GetEmail()" subject="Hello%20again" target="_top">@Model.GetEmail()</a></li>
  </div>
  <div class="col-xs-2 col-sm-3 col-md-3 col-lg-3 side-bar">

  </div>
</div>
<div class="row button-row">
</form>
  <div class="col-xs-1 col-sm-1 col-md-1 col-lg-2 sidebar">
  </div>
  <div class="col-xs-3 col-sm-3 col-md-3 col-lg-3">
    <form action="/clear_friend/@Model.GetId()">
      <button type="submit" class="clear-all-friends-button">Remove This Friend</button>
    </form>
  </div>
  <div class="col-xs-4 col-sm-4 col-md-4 col-lg-3">
    <form action="/friends_list">
      <button type="submit" class="add-new-friend-button">See All Friends</button>
    </form>
  </div>
  <div class="col-xs-3 col-sm-3 col-md-3 col-lg-3">
    <form action="/">
      <button type="submit" class="home-button">Back to Home</button>
    </form>
  </div>
  <div class="col-xs-1 col-sm-1 col-md-1 col-lg-2 sidebar">
  </div>
</div>
