@Html.Partial("friend-form.cshtml")
<h1>You've added a contact to the list of friends!</h1>
<div class="row">
  <div class="col-md-3 col-lg-3 col-sm-3 col-xs-3 side-bar">
  </div>
  <div class="col-md-6 col-lg-6 col-sm-6 col-xs-6 friends-list">
    <ol>
    @foreach (var friend in Model)
    {
      <li class="friends-list"><h3><a href="/friend/@friend.GetId()">@friend.GetName()</a></h3></li>
    }
    </ol>
    <ul>
  </div>
  <div class="col-md-3 col-lg-3 col-sm-3 col-xs-3 side-bar">

  </div>
  <div class="row">
    <div class="col-md-5">

    </div>
    <div class="col-md-2">
      <form action="/contacts_deleted">
        <button type="submit" class="clear-all-friends-button">Clear All Friends</button>
      </form>
    </div>
    <div class="col-md-5">

    </div>
  </div>
</div>
